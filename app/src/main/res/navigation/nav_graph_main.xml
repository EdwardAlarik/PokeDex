<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/frgHome">

    <action
        android:id="@+id/actionHome"
        app:destination="@id/frgHome"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:launchSingleTop="false"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@animator/nav_default_pop_exit_anim"
        app:popUpToInclusive="false" />
    <action
        android:id="@+id/actionListPokemon"
        app:destination="@id/frgListPokemon"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:launchSingleTop="false"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@animator/nav_default_pop_exit_anim"
        app:popUpToInclusive="false" />
    <action
        android:id="@+id/actionListTypes"
        app:destination="@id/frgListType"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:launchSingleTop="false"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@animator/nav_default_pop_exit_anim"
        app:popUpToInclusive="false" />
    <action
        android:id="@+id/actionPokemon"
        app:destination="@id/frgPokemon"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:launchSingleTop="false"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@animator/nav_default_pop_exit_anim"
        app:popUpToInclusive="false" />

    <fragment
        android:id="@+id/frgHome"
        android:name="com.edwardalarik.app.modules.home.FrgHome"
        android:label="fragment_main"
        tools:layout="@layout/frg_home" />
    <fragment
        android:id="@+id/frgListPokemon"
        android:name="com.edwardalarik.app.modules.listpokemon.FrgListPokemon"
        android:label="frg_list_pokemon"
        tools:layout="@layout/frg_list_pokemon" />
    <fragment
        android:id="@+id/frgListType"
        android:name="com.edwardalarik.app.modules.listtypes.FrgListType"
        android:label="frg_list_type"
        tools:layout="@layout/frg_list_type" />
    <fragment
        android:id="@+id/frgPokemon"
        android:name="com.edwardalarik.app.modules.pokemon.FrgPokemon"
        android:label="frg_pokemon"
        tools:layout="@layout/frg_pokemon" />

</navigation>